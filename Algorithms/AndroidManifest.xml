<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.algorithms"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.algorithms.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.algorithms.BubbleSort"
            android:label="@string/title_activity_bubble_sort"
            android:parentActivityName="com.example.algorithms.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.algorithms.MainActivity" />
        </activity>
        <activity
            android:name="com.example.algorithms.InsertionSort"
            android:label="@string/title_activity_insertion_sort"
            android:parentActivityName="com.example.algorithms.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.algorithms.MainActivity" />
        </activity>
        <activity
            android:name="com.example.algorithms.SelectionSort"
            android:label="@string/title_activity_selection_sort"
            android:parentActivityName="com.example.algorithms.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.algorithms.MainActivity" />
        </activity>
        <activity
            android:name="com.example.algorithms.CocktailSort"
            android:label="@string/title_activity_cocktail_sort"
            android:parentActivityName="com.example.algorithms.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.algorithms.MainActivity" />
        </activity>
    </application>

</manifest>